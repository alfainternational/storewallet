# Application Configuration
APP_NAME=StoreWallet
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://storewallet.sd

# Locale & Timezone
APP_LOCALE=ar
APP_TIMEZONE=Africa/Khartoum

# Log Configuration
LOG_CHANNEL=stack
LOG_LEVEL=error

# Main Database (Marketplace)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=storewallet
DB_USERNAME=root
DB_PASSWORD=

# Wallet Database (xCash v3.0)
WALLET_DB_HOST=127.0.0.1
WALLET_DB_PORT=3306
WALLET_DB_DATABASE=xcash
WALLET_DB_USERNAME=root
WALLET_DB_PASSWORD=

# Cache Configuration
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DRIVER=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@storewallet.sd
MAIL_FROM_NAME="${APP_NAME}"

# SMS Configuration (for Sudan)
SMS_PROVIDER=sudatel
SMS_API_KEY=
SMS_API_SECRET=
SMS_SENDER_ID=StoreWallet

# Payment Gateways
# Sudanese Payment Gateway
SUDANESE_PAYMENT_API_KEY=
SUDANESE_PAYMENT_SECRET=
SUDANESE_PAYMENT_MERCHANT_ID=

# Bank Transfer (Optional)
BANK_TRANSFER_ENABLED=true
BANK_NAME="Bank of Khartoum"
BANK_ACCOUNT_NUMBER=
BANK_IBAN=

# Currency
DEFAULT_CURRENCY=SDG
CURRENCY_SYMBOL=ج.س

# Platform Commission
PLATFORM_COMMISSION_RATE=0.05

# File Upload Limits
MAX_FILE_SIZE=10240
MAX_IMAGE_SIZE=5120
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Security
SESSION_SECURE_COOKIE=true
SANCTUM_STATEFUL_DOMAINS=storewallet.sd,www.storewallet.sd

# AWS S3 (Optional for CDN)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=me-south-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher (Real-time notifications)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# Google Services (Optional)
GOOGLE_MAPS_API_KEY=
GOOGLE_ANALYTICS_ID=

# Social Login (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30

# Monitoring
SENTRY_LARAVEL_DSN=

# Rate Limiting
RATE_LIMIT_ENABLED=true
API_RATE_LIMIT=60

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="نعتذر، الموقع تحت الصيانة حالياً"
